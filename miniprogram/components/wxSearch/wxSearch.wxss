.wxSearch{
  position: absolute;
  top: 86rpx;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(0, 0, 0, 0.2);  
  z-index: 888;
}
.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding: 10rpx 20rpx;
  border: 1px #eee solid;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.wxSearch-input{
  flex: 8; 
  background-color: #eee;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: #2DC3A6 !important;
}

.wxSearchTitle{
  display: block;
  padding: 20rpx 10rpx 10rpx 20rpx;
  font-size: 24rpx;
  text-align: center;
}


.wxSearchMindKeyItem{
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 28rpx;
  color: #2DC3A6;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem{
  flex: 0 0 20%;
  font-size: 32rpx;
  text-align: center;
  border: 1px solid #eee;
  margin: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;  
}
.wxSearchHistoryItem{
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 28rpx;
}
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 24rpx;
  text-align: center;
  padding: 6rpx 10rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.delIcon{
  width: 40rpx;
  height: 40rpx;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
}
.wxSearchDeleteAllBtn{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 24rpx;
}