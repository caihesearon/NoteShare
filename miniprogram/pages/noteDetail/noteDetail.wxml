<template is="commonInfo" data="{{titleInfo:titleInfo, html:html, currTime:currTime}}"></template>
<view class="showCount">
  <icon class="iconfont icon-yanjing count"> {{clickCount}}</icon>
  <icon class="iconfont icon-dianzan1 count"> {{likeCount}}</icon>
  <icon class="iconfont icon-shoucang2 count"> {{loveCount}}</icon>
