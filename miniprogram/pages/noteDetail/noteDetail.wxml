	点赞量{{likeCount}}
	收藏量{{loveCount}} -->
</view>
<view style="margin: auto auto;" bindtap="onClickShow"> <!-- bindtap="showRewardCode"-->
	<icon class="iconfont icon-dashang"></icon>
</view>
