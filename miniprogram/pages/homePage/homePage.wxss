/* 取消收藏的样式 */
.cancelCollet{
  width: 90rpx;
  height: 90rpx;
  position: relative;
  top: -16rpx;
  left: 520rpx;
}
/* 取消收藏的图标的样式 */
.cancelColletIcon{
  width: 100%;
  height: 100%;
}
/* 创建笔记的模块的样式 */
.createNote{
  width: 140rpx;
  height: 140rpx;
  position: fixed;
  z-index: 99;
  right: 50rpx;
  bottom: 50rpx;
}
/* 创建笔记的图标的样式 */
.createNoteIcon{
  width: 100%;
  height: 100%;
}

/* 顶部Tabs访问当前title的样式 设置 */
.index-tabs .van-tab--active .van-ellipsis {
  color: #87CEEB;
  font-size: 1.3rem;
}