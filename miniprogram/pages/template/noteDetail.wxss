
/* 信息条的样式 */
.barBox{
  width: 100%;
  height: 90rpx;
  background-color: rgba(135,206,235, 0.3);
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  top: 20rpx;
}
.nickBox{
  width: 180rpx;
  height: 80rpx;
  overflow: hidden;
  text-align: center;
  line-height: 80rpx;
}
.Name{
  font-size: 0.9rem;
  line-height: 90rpx;
  text-align: center;
  color: #959595;
}
.skimBox{
  width: 400rpx;
  height: 90rpx;
  position: relative;
  line-height: 90rpx;

}

