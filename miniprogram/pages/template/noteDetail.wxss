.optionText{
  text-align: center;
  line-height: 90rpx;
  font-size: 0.8rem;
  position: relative;
  left: -120rpx;
}
.knowledgeBox{
  width: 100%;

  z-index: -3rpx;
  
}
.subjectBox{
  top: 20rpx;
  width: 100%;
}
.knowledge{
  width: 95rpx;
  top: 10rpx;
}
.subjectBox,.knowledge{
  height: 72rpx;
  width: 100%;
  position: relative;
  
}
.knowledge{
  position: relative;
  bottom: 10rpx;
  line-height: 40rpx;
}
.textDetail{
  color: #959595;
  font-size: 0.85rem;
}

.subject,.titlePoint{
  color: #87CEEB;
  font-weight: 800;
  font-size: 0.98rem;
  font-family: "PingFangSC-Medium";
}
.subject{
  margin-left: 30rpx;
}


