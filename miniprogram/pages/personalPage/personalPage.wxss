page{
  background-color: rgba(135, 206, 235,0.8);
}

/* 名片框的整体大小设置 */
.idCard{
  width: 100%;
  height: 480rpx;
  position: absolute;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 40rpx;
  /* border: 1px solid red; */
}
/* 正面的卡片大小 */
.cardOne{
  width: 100%;
  height: 100%;
  position: absolute;
 
}
/* 正面卡片图片的大小 */
.imageOne{
  width: 100%;
  height: 100%;
  
}
/* .imageOne, .imageTwo{
  border-radius: 40rpx;
  margin-left: 12rpx;
  border: 1px solid green;
} */
/* 用户头像的设置 */
.avatarImage{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #e6b92e;
  border-radius: 50%;
  position: absolute;
  left: 315rpx;
  top: 84rpx;
}

/* 昵称和操作大小设置 */
.partOne{
  width: 400rpx;
  height: 128rpx;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 220rpx;
  left: 175rpx;
}

.cardDes{
  /* font-size: 1.7rem; */
  font-weight: 700;
  color: white;
  text-align: center;
}
/* 提示操作的字体样式设置 */
.detailDes{
  font-size: 24rpx;
  color: white;
  text-align: center;
  margin-top: 12rpx;
}

/* 个性签名框的小 和 设置超出隐藏 */
.partTwo{
  display: -webkit-box;
  width: 450rpx;
  height: 95rpx;
  position: absolute;
  top: 345rpx;
  left: 153rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-align: center;
  
}
/* 个性签名的样式 */
.Signature{
  margin: 0 auto;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 32rpx;
  overflow: hidden;
 
}

/* 第二张卡片的样式 */
.cardTwo{
  width: 100%;
  height: 100%;
  position: absolute;
  transform: rotateY(180deg);
}
/* 反面的卡片 */
.imageTwo{
  width: 100%;
  height: 100%;
}
/* 第一部分的样式  即身份和昵称 */
.sectionOne{
  width: 150rpx;
  height: 320rpx;
  position: absolute;
  top: 100rpx;
  left: 80rpx;
  text-align: center;
  line-height: 150rpx;  
  writing-mode: vertical-lr;
  writing-mode: tb-lr;
  word-wrap: break-word;
  overflow: hidden ;
}
/* .hiden{
  overflow: hidden;
} */
/* 设置昵称 */
.nickName{
  font-weight: bolder;
  color: #e6b92e;
}
/* 设置身份的字体 */

/* 反面的卡片的样式的第二部分 身份 就是学校 和公开笔记数量 */
.sectionTwo{
  width: 360rpx;
  height: 270rpx;
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 100rpx;
  left: 360rpx;
  display: flex;
  flex-direction: column;
}
/* 设置 身份 邮箱 学校 和公开笔记数量 */
.Identity,.emailNumber,.SchoolName,.publicNote{
  width: 320rpx;
  height: 40rpx;
  color: #e6b92e;
}
/* 设置笔记数量的字体 */
.noteNumber{
  font-size: 36rpx;
  font-weight: bolder;
}

/* 设置背面隐藏 */
.cardOne,.cardTwo{
  transition: all 1s;
  backface-visibility: hidden;
}

.Identity, .cardDes,.detailDes,.Signature{
  color: #e6b92e;
}

/* 笔记部分样式 */
.notesBox{
  width: 96%;
  margin-left: 14rpx;
  height: 270rpx;
  position: relative;
  top: 550rpx;
  margin-top: 40rpx;
  box-shadow: 10px 12px 10px rgba(2, 2, 2, 0.8);
  border-radius: 35rpx;
}
/* 笔记背景卡片 */
.notesBg{
  width: 100%;
  height: 270rpx;
}

/* 点击量，收藏量 学科分类的小图标 */
.clickIcon,.subjectIcon,.collectIcon{
  width: 50rpx;
  height: 50rpx;
}
/* 卡片样式 */
.noteCard{
  width: 100%;
  height: 350rpx;
  border-radius: 50rpx;
  z-index: -99;
  box-shadow: 2px 2px 10px rgba(197, 187, 187, 0.8);
  margin-left: 8rpx;
}
.textContent{
  width: 100%;
  height: 235rpx;
  position: relative;
  bottom: 270rpx;
}
/* 内容样式 */
 .content{
  width: 650rpx;
  height: 60rpx;
  position: relative;
  top: 20rpx;
  left: 45rpx;
  line-height:  60rpx;
  font-size: 1.2rem;
  font-weight: 600;
  color: white;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

/* 下面标题 */
.label{
  width: 90%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  position: relative;
  top: 80rpx;
  left: 10rpx;
}
/* 学科 */
.subject{
  width: 220rpx;
  height: 50rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
}
/* 学科图标 */
.subjectIcon{
  width: 50rpx;
  height: 50rpx;
}
/* 学科描述 */
.subjectDes{
  width: 110rpx;
  height: 50rpx;
  font-size: 35rpx;
  font-weight: 700;
  color:white;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
}
/* 点击量和收藏量 */
.clickNumber,.collectNumber{
  width: 140rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 20rpx;
}
/* 点击量和收藏量 */
.clickNum,.collectNum{
  font-size: 0.8rem;
  color: white;
}
/* 点击量和收藏量图标 */
.clickIcon,.collectIcon{
  margin: 0 auto;
}
/* 学科分类 */
.subject{
  width: 150rpx;
  height: 50rpx;
  margin-top: 18rpx;
  display: flex;
  justify-content: space-between;
}
/* 知识点 */
.knowledgePoint{
  width: 380rpx;
  height: 50rpx;
  margin-top: 18rpx;
  display: flex;
}
.knowledgeOne,.knowledgeTwo{
  font-size: 35rpx;
  font-weight: 700;
  color: white;
  margin-left: 15rpx;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-line-clamp: 1;
}

.divider{
  height: 40rpx;
  width: 100%;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  top: 520rpx;
  color: white;
  overflow: hidden;
}


