/*上边疫情数据卡片展示区域*/
.header{
   /* background-color: rgba(45, 169, 249); */
   opacity: 0.8;
   /* margin-top: 90rpx; */
   
}
/*上半部分卡片展示区域的背景图片的设置*/
.header_image{
   z-index: -1;
}
/*两者的公共部分*/
.header{
   width: 100%;
   height: 600rpx;
   position: absolute;
}
.header_image{
   width: 100%;
   height: 500rpx;
   position: absolute;
}
/* 标题 布局样式 */
.Text{
   display: flex;
   flex-direction: column;
}
/*头部大小字标签公共样式*/
.headerTitle,.headerTitle_small{
   color: white;
   float: left;
   margin-left: 30rpx;  
}
/* 大字标题样式 */
.headerTitle{
   font-size: 50rpx;
   font-weight: bolder;
   margin-top: 40rpx;
}
/* 小字标题 */
.headerTitle_small{
   font-size: 30rpx;
   font-weight: bold;
   margin-top: 15rpx;
}
/* 数据展示卡片中的时间 */
.getTime{
   width: 90%;
   height: 25rpx;
   margin-left: 30rpx;
   margin-top: 10rpx;
}
.getTime .DesTime{
   font-size: 26rpx;
   color: #a59e9e;
}
.getTime .time{
   font-size: 24rpx;
   color:  #ECB0C2;
}

/* 数据展示卡片样式 */
.Epidemic_data{
   display: flex;
   flex-direction: column;
   width: 90%;
   height: 400rpx;
   border-radius: 15rpx;
   background-color: whitesmoke;
   margin-top: 50rpx;
   margin-left: 30rpx;
   box-shadow: 2px 2px 10px rgba(197, 187, 187, 0.8);
}
/* 中间数据展示部分的布局方式 */
.showCardone,.showCardtwo{
   display: flex;
   justify-content: space-around;
}

/* 每一部分的数据的大小 */
.Confirmed_cases{
   width: 200rpx;
   height: 150rpx;
}
/* 确诊病例，疑似病例等四个数字的样式 */
.number_1,.number_2,.number_3,.number_4,.number_5,.number_6{
   font-size: 42rpx;
   font-weight: bold;
   text-align: center;
   margin-top: 24rpx;
}
/* 数据的文字数据 */
.description{
   font-size: 25rpx;
   font-weight: 600;
   text-align: center;
   /* margin-top: 8rpx; */
}
/* 较昨天改变的数据展示部分 */
.change{
   text-align: center;
   /* margin-top: 8rpx; */
}
/* 变化数字的样式 */
.change .text,.change .changenumber_1,.changenumber_2,.changenumber_3,.changenumber_4,.changenumber_5,.changenumber_6{
   font-size: 18rpx;
}

/* 设置数字的颜色*/
.number_1,.changenumber_1{
   color:#F74C32 ;
}
.number_2,.changenumber_2{
   color:#F88207 ;
}
.number_3,.changenumber_3{
   color:#A25A4E ;
}
.number_4,.changenumber_4{
   color:#AE202C ;
}
.number_5,.changenumber_5{
   color:#5D7091 ;
}
.number_6,.changenumber_6{
   color:#28B7A3 ;
}

/* 数据来源说明的文字样式 */
.data_directions{
   font-size: 22rpx;
   margin-left: 300rpx;
   margin-top: 15rpx;
   color: grey;
  }

/* 中间卡片的功能区 */
.utils_card{
   width: 100%;
   height: 200rpx;
   box-shadow: 2px 2px 10px rgba(197, 187, 187, 0.8);
   display: flex;
   justify-content: space-between;
   margin-top: 15rpx;
}
.iconboximage{
   width: 80rpx;
   height: 80rpx;
   margin-left: 45rpx;
}
.iconbox{
   width: 200rpx;
   height: 150rpx;
   display: flex;
   flex-direction: column;
   margin-top: 40rpx;
}
.describe{
   font-size: 25rpx;
   font-weight: 600;
   text-align: center;
   margin-top: 15rpx;
}

/* 弹出层的图片样式 */
.devingImage{
   width: 256rpx;
   height: 256rpx;
   /* margin-left:30%; */
}
.van-button{
   width: 100%;
}
