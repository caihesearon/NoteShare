<view class="epidemicTips">
	<image  class="headerImge" src="{{epidemicTipsImg}}"></image>
	<view class="Tips">
			<view class="showCard">
      <image mode="aspectFit" class="Icon" src="{{IconSrc}}"></image>
				<swiper indicator-dots='true' 
                indicator-active-color="#87CEEB" 
                autoplay="true" interval="5000" 
                circular="true" 
                class="swiperStyle">
				  	<block wx:for='{{tops}}' wx:key='{{item._id}}'>
						<swiper-item>
							<image src="{{item.url}}" mode="aspectFill" class="slide-image"></image>
						</swiper-item>
					</block>
				</swiper>
			</view>
	</view>
</view>